block mainVars

doctype
html(lang='ja')
  head(prefix='og: http://ogp.me/ns# fb: http://ogp.me/ns/fb# article: http://ogp.me/ns/article#')
    meta(charset="utf-8")
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no')
    block robots
      meta(name='robots', content='index,follow,noarchive')
      meta(name="googlebot", content="index,follow,noarchive")

    block meta
      mixin meta(metas)
        title
          if subtitle
            = subtitle
            | ï½œ
          = title
          | Title
        meta(name="description", content=metas.description)
        meta(name="keywords", content=metas.keywords)

    include inc/_inc_favicon
    include inc/_inc_stylesheet

    script(type='text/javascript', src='http://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js')
    <!--[if (gte IE 10)|!(IE)]><!-->
    script(src='/assets/javascripts/before-load.js')
    <![endif]-->

    <!--[if lt IE 10]>
    script(src="/assets/javascripts/iealert.js", type="text/javascript")
    script.
      $(document).ready(function() {
          $("body").iealert();
      });
    <![endif]-->

  body(class=metas.bodyname)

    include ../shared/_header

    block content

    include ../shared/_footer

    <!--[if (gte IE 10)|!(IE)]><!-->
    script(src='/assets/javascripts/after-load.js')
    <![endif]-->